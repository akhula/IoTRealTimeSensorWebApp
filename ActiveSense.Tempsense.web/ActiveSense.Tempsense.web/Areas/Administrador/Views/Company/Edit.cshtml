                <div class="checkbox">
                    @Html.EditorFor(model => model.Notificar_SMS)
                    @Html.ValidationMessageFor(model => model.Notificar_SMS, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-sm-4">
                <input type="submit" value="Guardar" class="btn btn-primary active" />
                @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

