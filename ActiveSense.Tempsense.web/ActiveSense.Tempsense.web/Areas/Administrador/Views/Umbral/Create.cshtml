@model ActiveSense.Tempsense.model.Modelo.Umbral

@{
    ViewBag.Title = "Crear";
}
<h2>
    <font color="#999">
        CREAR UMBRAL
    </font>
</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <label for="Temperatura_min" class="control-label col-md-2"> Valor Mínimo</label>
            <div class="col-sm-2">
                @Html.EditorFor(model => model.Temperatura_min, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Temperatura_min, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Temperatura_max" class="control-label col-md-2"> Valor Máximo</label>
            <div class="col-sm-2">
                @Html.EditorFor(model => model.Temperatura_max, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Temperatura_max, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Tolerancia_min" class="control-label col-md-2"> Tolerancia Mínima</label>
            <div class="col-sm-2">
                @Html.EditorFor(model => model.Tolerancia_min, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tolerancia_min, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Tolerancia_max" class="control-label col-md-2"> Tolerancia Máxima</label>
            <div class="col-sm-2">
                @Html.EditorFor(model => model.Tolerancia_max, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tolerancia_max, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="DispositivoID" class="control-label col-md-2"> Dispositivo</label>
            <div class="col-sm-2" style="left: 1.3%;">
                <div class="form-group">
                    @Html.DropDownList("DispositivoID", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


