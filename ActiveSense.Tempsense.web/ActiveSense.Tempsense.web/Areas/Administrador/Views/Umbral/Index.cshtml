@model IEnumerable<ActiveSense.Tempsense.model.Modelo.Umbral>

@{
    ViewBag.Title = "Index";
}

<h2>
    <font color="#999">
        UMBRALES
    </font>
</h2>
<hr />
<p>
    @Html.ActionLink("Crear", "Create", new { }, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered" style="padding-bottom: 60px;">
        <thead>
            <tr class="active">
                <th>
                    Valor Mínimo
                </th>
                <th>
                    Valor Máximo
                </th>
                <th>
                    Tolerancia Mínima
                </th>
                <th>
                    Tolerancia Máxima
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DispositivoID)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Temperatura_min)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Temperatura_max)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tolerancia_min)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tolerancia_max)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>

                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.UmbralID }, new { @class = "btn btn-primary btn-xs" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.UmbralID }, new { @class = "btn btn-primary btn-xs" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>